pipeline {

agent any 
parameters {
    choice(
        name: 'Version',
        choices: ['1.1', '1.2', '1.3'],
        description: 'Select the version to deploy'
    )
}
stages {

        stage('Build') {
            steps {
                echo "Building the application"
            }
        }
        stage('Test') {
            steps {
                echo "Testing the application"
            }
        }
        stage('Deploy') {
            steps {
                echo "Deploying the application"
                echo "Deploying version ${params.Version}" 
            }
        }
}
}
