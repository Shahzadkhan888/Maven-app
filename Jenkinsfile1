pipeline {

agent any 
Parameters {
choice(name: 'Version', choices: ['1.1', '1.2', '1.3'], description: ' ')
}
stages {

        stage('Build') {
            steps {
                echo "Building the application"
            }
        }
        stage('Test') {
            steps {
                echo "Testing the application"
            }
        }
        stage('Deploy') {
            steps {
                echo "Deploying the application"
                echo "Deploying version ${params.Version}" 
            }
        }
}
}
